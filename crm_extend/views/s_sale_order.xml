<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="s_sale_order_form_view" model="ir.ui.view">
        <field name="name">s.sale.order.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="plan_sale" domain="[('quotation','=', id)]"
                       attrs="{'readonly':[('state', 'in', ('sale'))]}"/>
                <search>
                    <group expand="0">
                        <filter string="Plan sale order" name="group_plan_sale" context="{'group_by':'plan_sale'}"/>
                    </group>
                </search>
            </xpath>

            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="create_plan_sale" string="Creat plan sale"
                        type="object"
                        class="btn-primary"/>
            </xpath>


        </field>
    </record>


</odoo>