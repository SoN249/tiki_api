<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="shipping_document_type_form_view" model="ir.ui.view">
        <field name="name">shipping.document.type.form.view</field>
        <field name="model">shipping.document</field>
        <field name="mode">primary</field>
        <field name="priority">25</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="document_type"/>
                    <field name="document_size" widget="radio"/>
                </group>
                <footer>
                    <button name="btn_confirm" string="Confirm" type="object" class="btn-primary" data-hotkey="q"/>
<!--                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>-->
                </footer>
            </form>
        </field>
    </record>
</odoo>