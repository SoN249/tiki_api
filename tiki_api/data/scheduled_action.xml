<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
     <record id="ir_cron_sync_order" model="ir.cron">
            <field name="name">Update order</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model._get_list_order()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hour</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="((datetime.now().replace(day=28) + timedelta(days=4)) - timedelta(days=(datetime.now().replace(day=28) + timedelta(days=4)).day)).strftime('%Y-%m-%d 08:00:00')" />
        </record>
      </data>
</odoo>